sequence VecTrigger()
  input  iter:   Stream<Vec<void>>
  output start:  Block<void>
  output finish: Block<void>
{
    Linearize()
    Trigger()

    Self.iter --> Linearize.vector,value -> Trigger.iter
    Trigger.start ------------------------> Self.start
    Trigger.finish -----------------------> Self.finish
}
